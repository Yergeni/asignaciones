{# mensajes de notificacion success #}

{% if flash_message is not defined %} {# esto es en caso que se envie el mensaje por el RESPONSE json_encode #}
    <div class="alert alert-success hidden" id="message" role="alert">
        <div class="container">
            <span id="user-message"></span>
        </div>
    </div>
{% endif %}

{% for flash_message in app.session.flashbag.get('mensaje') %}
    <div class="alert alert-success" role="alert">
        <div class="container">
            {{ flash_message }}
        </div>
    </div>
{% endfor %}